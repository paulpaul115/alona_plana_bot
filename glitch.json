{
  "install": "python3 -m pip install discord.py discord-py-slash-command",
  "start": "PYTHONUNBUFFERED=true python3 main.py",
  "watch": {
    "ignore": ["\\.pyc$"],
    "install": {
      "include": ["^requirements\\.txt$"]
    },
    "restart": {
      "include": ["\\.py$", "^start\\.sh"]
    },
    "throttle": 1000
  }
}
